package heap;

public class Heap {
	private final int MAX_ELLEMENT = 200;
	private int[] heap;
	private int heap_size;
	
	public Heap() {
		heap = new int[MAX_ELLEMENT];
		heap[0] = 0;
		heap_size = 0;
	}
	
	public int insert(int element) {
		heap[++heap_size] = element;
		
		int current_location = heap_size;
		int parent = heap_size / 2;
		
		int temp = 0;
		while (parent > 0) {
			if (heap[parent] < heap[current_location]) {
				temp = heap[parent];
				heap[parent] = heap[current_location];
				heap[current_location] = temp;
				current_location = parent;
			}else {
				break;
			}
			parent = parent / 2;
		}
		return 0;
	}
	
	public int remove() {
		return 0;
	}
	
	public void printHeap() {
		for (int i = 1; i <= heap_size; i++) {
			System.out.println(i+" "+heap[i]);
		}
	}
}
